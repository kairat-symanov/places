<h1>Категории</h1>

<%= link_to 'Добавить категорию', new_category_path, class: "btn btn-success" %>

<table>
  <tr>
    <td>Название категории</td>
    <td colspan="3">Действие</td>
  </tr>
  <% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td>
      <%= link_to 'Смотреть', category_path(category), class: "btn btn-outline-primary" %>
      <%= link_to 'Изменить', edit_category_path(category), class: "btn btn-outline-warning" %>
      <%= link_to 'Удалить', category_path(category), class: "btn btn-outline-danger", method: :delete, 
                           data: {confirm: 'Вы действительно хотите удалить эту категорию?'} %>
    </td>
  </tr>
  <% end %>
</table><br>
<%= link_to 'Назад', places_path, class: "btn btn-outline-info" %>

