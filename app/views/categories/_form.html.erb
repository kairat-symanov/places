<%= form_with model: @category, local: true do |f| %>
  <% if @category.errors.any? %>
    <div class="errors"> 
      Errors:  <%= @category.errors.count %>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, placeholder: 'Название категории' %>
  </div><br>
  
  <div class="action">
    <%= f.submit 'Подтвердить', class: 'ui dividing header' %>
  </div>
<% end %>

